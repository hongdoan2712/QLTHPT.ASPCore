@model QLTHPT.Models.Thoikhoabieu

@{
    ViewBag.Title = "Edit";
}

<div class="data-table-area mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline13-list shadow-reset">
                    <div class="sparkline13-hd">
                        <div class="main-sparkline13-hd">
                            <h4><strong>Chỉnh Sửa</strong></h4>

                        </div>
                    </div>
                    <div class="sparkline13-graph">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.TkbMa)
                                <div class="form-group-inner" style="text-align: left;">
                                    <div class="col-md-12" style="text-align: left;">
                                        @Html.LabelFor(model => model.TkbMa, "Mã", htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.TkbMa, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.TkbMa, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.LopLopMa, "Lớp", htmlAttributes: new { @class = "control-label" })
                                        @Html.DropDownList("LopLopMa", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.LopLopMa, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.MonhocMhMa, "Môn", htmlAttributes: new { @class = "control-label" })
                                        @Html.DropDownList("MonhocMhMa", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.MonhocMhMa, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.ThuThuMa, "Thứ", htmlAttributes: new { @class = "control-label" })
                                        @Html.DropDownList("ThuThuMa", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ThuThuMa, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.TiethocThMa, "Tiết", htmlAttributes: new { @class = "control-label" })
                                        @Html.DropDownList("TiethocThMa", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.TiethocThMa, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.CanboCbMa, "Cán Bộ", htmlAttributes: new { @class = "control-label" })
                                        @Html.DropDownList("CanboCbMa", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CanboCbMa, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.HockyHkMa, "Học Kỳ", htmlAttributes: new { @class = "control-label" })
                                        @Html.DropDownList("HockyHkMa", null, htmlAttributes: new { @class = "form-control" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.HockyHkMa, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            <div class="form-group" style="text-align: left;">
                                <div style=" padding-left: 30px;">
                                    <input type="submit" value="Lưu" class="btn btn-default" /> |
                                    <a href="@Url.Action("Index", "Thoikhoabieu")" class=" btn btn-custon-rounded-three btn-primary"><i class="fa fa-undo"></i></a>
                                </div>
                            </div>
                        </div>
                    }
                    </div>
                </div>
            </div>
        </div>
    </div>
 </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
